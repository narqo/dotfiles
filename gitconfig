[user]
    name = Vladimir Varankin
    email = nek.narqo+git@gmail.com
[github]
    user = narqo
[url "https://github.com/"]
    insteadOf = "gh://"
[core]
    editor = vim
    excludesfile = ~/.gitignore
    whitespace = fix,-indent-with-non-tab,trailing-space,-cr-at-eol
[diff]
    algorithm = patience
[push]
    default = current
[alias]
    br = branch -v
    ci = commit
    co = checkout
    di = diff
    st = status -sb
    hist = log --graph --pretty=format:'%C(red)%h%Creset %s - %ad%C(green)%d%Creset %C(blue)<%an>%Creset' --date=short
    staged = diff --cached
    ff = merge --ff-only
    ls = ls-files
    up = !git pull --rebase --prune $@
    sweep = "!f() { git branch --merged ${1-master} | grep -v " ${1-master}$" | xargs git branch -d; }; f"
    root = rev-parse --show-toplevel
    pr = pull-request
[color]
    ui = auto
    branch = auto
    diff = auto
    interactive = auto
    status = auto
[include]
    path = ~/.config/git/local
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
