[init]
	defaultBranch = main
[user]
    name = Vladimir Varankin
    email = vladimir@varank.in
[github]
    user = narqo
[url "https://github.com/"]
    insteadOf = "gh://"
[url "ssh://git@github.com/"]
	insteadOf = https://github.com/
[core]
    editor = vim
    excludesfile = ~/.config/git/ignore
    whitespace = fix,-indent-with-non-tab,trailing-space,-cr-at-eol
[diff]
    algorithm = patience
    compactionHeuristic = true
[pull]
    rebase = true
[push]
    default = current
[alias]
    br = branch -v
    ci = commit
    co = checkout
    di = diff
    st = status -sb
    lg = log --oneline
    lp = log -p
    sw = switch
    hist = log --graph --pretty=format:'%C(red)%h%Creset %s - %ad%C(green)%d%Creset %C(blue)<%an>%Creset' --date=short
    staged = diff --cached
    ff = merge --ff-only
    ls = ls-files
    up = pull --rebase --autostash --prune
    sweep = "!f() { git branch --merged ${1-master} | grep -v " ${1-master}$" | xargs git branch -d; }; f"
    root = rev-parse --show-toplevel
    pr = pull-request
    mu = !git ls-files -v | grep '^[[:lower:]]'
    serve = daemon --verbose --export-all --base-path=.git --reuseaddr --strict-paths .git/
[color]
    ui = auto
    branch = auto
    diff = auto
    interactive = auto
    status = auto
[filter "lfs"]
    clean = git-lfs clean %f
    smudge = git-lfs smudge %f
    required = true
[gpg]
    format = ssh
[include]
    path = ~/.config/git/local
[http]
	cookiefile = ~/.config/git/cookies
